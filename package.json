{
	"name": "pesapi",
	"version": "1.0.0",
	"description": "A GraphQL Pro Evolution Soccer 6 API",
	"main": "src/index.ts",
	"scripts": {
		"build": "tsc --build tsconfig.json",
		"build:clean": "tsc --build --clean tsconfig.json",
		"build:watch": "tsc --build --watch tsconfig.json",
		"check:lint": "eslint .",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev",
		"db:push": "prisma db push",
		"db:reset": "prisma migrate reset",
		"fix:format": "prisma format && prettier \"./**/*.js\" \"./**/*.ts\" \"./**/*.json\" --write --config .prettierrc",
		"fix:lint": "eslint --fix .",
		"start": "ts-node src/index.ts",
		"start:dev": "NODE_ENV=development nodemon src/index.ts",
		"start:prod": "NODE_ENV=production node build/index.js"
	},
	"keywords": [
		"api",
		"graphql",
		"typescript",
		"pes",
		"ps2",
		"pro-evolution-soccer",
		"football-api"
	],
	"author": {
		"name": "Antonio Granaldi",
		"email": "tonio.granaldi@gmail.com"
	},
	"license": "CC0-1.0",
	"dependencies": {
		"@apollo/server": "^4.9.5",
		"@as-integrations/fastify": "^2.1.1",
		"@fastify/middie": "^8.3.0",
		"@fastify/static": "^6.12.0",
		"@prisma/client": "^5.6.0",
		"dotenv": "^16.3.1",
		"fastify": "^4.24.3",
		"gm": "^1.25.0",
		"graphql": "^16.8.1",
		"graphql-scalars": "^1.22.4",
		"morgan": "^1.10.0",
		"mysql2": "^3.6.3",
		"node-emoji": "^2.1.0",
		"reflect-metadata": "^0.1.13",
		"split": "^1.0.1",
		"type-graphql": "^2.0.0-beta.3",
		"typegraphql-prisma": "^0.27.1",
		"winston": "^3.11.0"
	},
	"devDependencies": {
		"@types/gm": "^1.25.4",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.9.0",
		"@types/split": "^1.0.5",
		"@typescript-eslint/eslint-plugin": "^6.11.0",
		"@typescript-eslint/parser": "^6.11.0",
		"eslint": "^8.53.0",
		"nodemon": "^3.0.1",
		"prettier": "^3.1.0",
		"prisma": "^5.6.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	}
}
